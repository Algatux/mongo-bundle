<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services
        http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>

        <service id="mongo.connection_registry"
                 class="Facile\MongoDbBundle\Services\ConnectionRegistry"
                 public="true" />

        <service id="mongo.connection_factory"
                 class="Facile\MongoDbBundle\Services\ConnectionFactory"
                 public="false">

            <argument type="service" id="mongo.connection_registry" />

        </service>

    </services>
</container>
